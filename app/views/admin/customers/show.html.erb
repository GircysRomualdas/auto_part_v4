<div>
  <%= link_to "back", admin_customers_path, class: "link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" %>
  <div class="card shadow-sm mt-3">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="display-6">Show Customer</h2>
        <%= button_to "Delete", admin_customer_path(@customer), method: :delete, data: {turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
      </div>
      <div>
        <h5 class="card-title">Customer Details</h5>
        <p class="mb-2"><strong>Email</strong> <%= @customer.email %></p>
        <p class="mb-2"><strong>Created</strong> <%= @customer.created_at.strftime("%Y-%m-%d %H:%M") %></p>
        <p class="mb-2"><strong>Last updated</strong> <%= @customer.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
      </div>
    </div>
  </div>
</div>
