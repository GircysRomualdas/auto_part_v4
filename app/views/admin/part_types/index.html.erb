<div>
  <div class="d-flex justify-content-between">
    <h1>Part Types</h1>
    <div class="my-auto">
      <%= link_to "New part type", new_admin_part_type_path, class: "btn btn-primary" %>
    </div>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Created</th>
        <th>Last updated</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @part_types.each do |part_type| %>
        <tr>
          <td style="width: 50px; height: 50px;"><%= part_type.image.present? ? image_tag(part_type.image.variant(:small)) : image_tag("https://via.placeholder.com/50") %></td>
          <td><%= part_type.name %></td>
          <td><%= part_type.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= part_type.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= link_to "view", admin_part_type_path(part_type), class: "link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
